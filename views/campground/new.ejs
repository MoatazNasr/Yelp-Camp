<% layout('layout/boilerplate') %>


    <div class="row">

        <h1 class="text-center">New Campground</h1>

        <div class=" col-6 offset-3 ">
            <!-- offest means shift 3 columns -->

            <form action="/campground" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class=" form-label" for="location">Location</label>
                    <input class=" form-control " type="text" name="campground[location]" id='location' required>
                </div>
                <div class="mb-3">
                    <label class=" form-label" for="title">Title</label>
                    <input class=" form-control" type="text" name="campground[title]" id='title' required>
                </div>
                <!-- <div class="mb-3">
                    <label class=" form-label" for="image">Image File</label>
                    <input class=" form-control " type="file" name="campground[image]" id='image' required>
                </div> -->
                <div class="mb-3">
                    <label for="formFileMultiple" class="form-label">Choose File(s)</label>
                    <input class="form-control" name="image" type="file" id="formFileMultiple" multiple>
                </div>

                <label class=" form-label" for="price">Price</label>

                <div class=" input-group mb-3">
                    <span class="input-group-text">$</span>
                    <input class=" form-control " type="text" name="campground[price]" id='price' placeholder="0.00"
                        required>
                </div>

                <div class="mb-3">
                    <label class=" form-label" for="description">Description</label >
                    <textarea class=" form-control " type="text" name="campground[description]" id='description'
                        required></textarea>
                </div>
                <button class="btn btn-success my-3">Add Campground</button>

            </form>

        </div>

    </div>


   