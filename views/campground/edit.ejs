<% layout('layout/boilerplate') %>


    <div class="row">


        <h1 class="text-center">Edit Campground</h1>

        <div class=" col-6 offset-3 ">
            <!-- offest means shift 3 columns -->


            <form action="/campground/<%=campgroundEdit.id%>?_method=PUT " method="POST" novalidate
                class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class=" form-label" for="location">Location</label>
                    <input class=" form-control " type="text" name="campground[location]" id='location' required
                        value="<%=campgroundEdit.location%>">
                </div>
                <div class="mb-3">
                    <label class=" form-label" for="title">Title</label>
                    <input class=" form-control" type="text" name="campground[title]" id='title' required
                        value="<%=campgroundEdit.title%>">
                </div>
                <div class="mb-3">
                    <label for="formFileMultiple" class="form-label">Choose File(s)</label>
                    <input class="form-control" name="image" type="file" id="formFileMultiple" multiple>
                </div>

                <label class=" form-label" for="price">Price</label>

                <div class=" input-group mb-3">
                    <span class="input-group-text">$</span>
                    <input class=" form-control " type="text" name="campground[price]" id='price' placeholder="0.00"
                        required value="<%=campgroundEdit.price%>">
                </div>

                <div class="mb-3">
                    <label class=" form-label" for="description">Description</label>
                    <textarea class=" form-control " type="text" name="campground[description]" required
                        id='description'><%=campgroundEdit.description%></textarea>
                </div>
                <button class="btn btn-info my-3">Update Campground</button>

            </form>

        </div>

    </div>